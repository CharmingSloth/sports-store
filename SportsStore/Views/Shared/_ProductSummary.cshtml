@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model?.Name
            <span class="badge rounded-pill bg-primary text-white" style="float:right">
                <small>@Model?.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">@Model?.Description</div>
    <form method="post" asp-controller="Cart" asp-action="Index" asp-antiforgery="true">
    <input type="hidden" asp-for="Id" name="productId" />
    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
    <button type="submit" class="btn btn-success btn-sm" style="float:right">
        Add To Cart
    </button>
</form>
</div>